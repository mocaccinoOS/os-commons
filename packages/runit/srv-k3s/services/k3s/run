#!/bin/sh

exec 2>&1

[ -r ./conf ] && . ./conf

img=$IMAGE

if [ ! -d "/var/lib/rancher" ]; then
 mkdir -p /var/lib/rancher
 if [ -n "$img" ] && [ ! -e "$img" ]; then
   dd if=/dev/zero of=$img bs=1MB count=2048
   mkfs.ext4 $img
   tune2fs -c0 -i0 $img
 fi
 if [ -n "$img" ] && [ -e "$img" ]; then
    mount -t ext4 -o loop "$img" /var/lib/rancher
  fi
fi

echo 'k3s starting.'

LANG=C LC_ALL=C \
exec /usr/bin/k3s server 2>&1
